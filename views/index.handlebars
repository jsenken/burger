<div class="container">
  <img class="burgerGuy" src="/assets/img/brrgrr.png">
  <h1 id="title">Eat-Da-Burger!</h1>

  <div class="row">
    {{!-- <div class="col-md-2"></div> --}}
    <div class="col-md-6"><h2>Burgers That Have Not Been Eaten!</h2></div>
    <div class="col-md-6"><h2>Burgers That Were Devoured!</h2></div>
    {{!-- <div class="col-md-2"></div> --}}
  </div>
  <div class="row">
    {{!-- <div class="col-md-2"></div> --}}
    <div class="col-md-6">
      {{!-- <ul> --}}
        {{#each burger}}
          {{#unless devoured}}
            {{> burgers/burger-undevoured devoured=true}}
          {{/unless}}
        {{/each}}
      {{!-- </ul> --}}
    </div>
    <div class="col-md-6">
      {{!-- <ul> --}}
        {{#each burger}}
          {{#if devoured}}
            {{> burgers/burger-devoured devoured=false}}
          {{/if}}
        {{/each}}
      {{!-- </ul> --}}
    </div>
  </div>
  <p></p>
  <p></p>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="burg" name="name">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <p id="instructions">Enter a burger you want to eat Click the submit button</p>
</form>

</div>